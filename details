    <meta charset="UTF-8">
    <title>Chi tiết sản phẩm</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 30px;
        }

        .product-container {
            display: flex;
            gap: 30px;
        }

        .product-image img {
            width: 500px;
            height: 450px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .product-info {
            max-width: 500px;
        }

        .product-info h2 {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .price {
            color: red;
            font-size: 22px;
            margin-bottom: 15px;
        }

        .btn-add {
            padding: 12px 25px;
            background: green;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .btn-add:hover {
            background: darkgreen;
        }

        .divider {
            border-bottom: 1px solid black;
            margin: 20px 0;
        }
    </style>
